<div class="container">

    {{ form_start(form) }}


    <div class="form-group">
        {{ form_label(form.title, 'Titre de l\'élément') }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description, 'Description de l\'élément') }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.type, 'Type de l\'élément') }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.acceptationCriteria, 'Critères d\'acceptations') }}
        {{ form_widget(form.acceptationCriteria, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.position, 'Ordonnencement de l\'élément') }}
        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.state, 'Etat de l\'élément') }}
        {{ form_widget(form.state, {'attr': {'class': 'form-control'}}) }}
    </div>

    {{ form_row(form._token) }}

    <button class="btn btn-edit">{{ button_label|default('Save') }}</button>

    {{ form_end(form, {'render_rest': false}) }}

</div>