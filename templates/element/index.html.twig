{% extends 'base.html.twig' %}

{% block title %}Element index{% endblock %}

{% block body %}
    <h1>Element index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Position</th>
                <th>Complexity</th>
                <th>NbHours</th>
                <th>AcceptationCriteria</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.title }}</td>
                <td>{{ element.description }}</td>
                <td>{{ element.type }}</td>
                <td>{{ element.position }}</td>
                <td>{{ element.complexity }}</td>
                <td>{{ element.nbHours }}</td>
                <td>{{ element.acceptationCriteria }}</td>
                <td>{{ element.state }}</td>
                <td>
                    <a href="{{ path('element_po_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('element_po_new') }}">Create new</a>
{% endblock %}
